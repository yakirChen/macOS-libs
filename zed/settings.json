// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
//
// https://www.kevnu.com/zh/posts/zed-editor-configuration-guide-autosave-prettier-terminal-font-and-formatting-made-easy
{
  "language_models": {
    "ollama": {
      "api_url": "http://192.168.1.66:11434"
    }
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "ollama",
      "model": "hermes3:70b"
    },
    "model_parameters": []
  },
  "show_wrap_guides": false,
  "format_on_save": "off",
  "languages": {
    "XML": {
      "show_wrap_guides": true,
      "auto_indent_on_paste": false,
      "auto_indent": false
    }
  },
  "icon_theme": "Zed (Default)",
  "horizontal_scroll_margin": 1.0,
  "vertical_scroll_margin": 1.0,
  "buffer_font_weight": 300.0,
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true,
  },
  "disable_ai": false,
  "use_system_window_tabs": false,
  "scroll_beyond_last_line": "one_page",
  "collaboration_panel": {
    "dock": "left",
  },
  "features": {
    "edit_prediction_provider": "none",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "ui_font_size": 12.0,
  "font_family": "Hack",
  "buffer_font_family": "Hack",
  // "buffer_line_height": "standard",
  "buffer_line_height": { "custom": 1.16 },
  "buffer_font_size": 11,
  "soft_wrap": "none",
  "restore_on_startup": "last_session",
  // "theme": "cave-light",
  "theme": {
    "mode": "light",
    "light": "One Light",
    "dark": "Gruvbox Dark",
  },
  "autosave": "on_window_change",
  "base_keymap": "JetBrains",
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1,
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    // "diagnostics": "warning",
    "axes": {
      "horizontal": true,
      "vertical": true,
    },
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true,
  },
  "tabs": {
    "close_position": "left",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "padding": 5,
      "enabled": false,
      "show_commit_summary": true,
    },
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "off",
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default",
      },
    },
    "font_family": "Hack",
    // "font_features": null,
    "font_size": 10.0,
    "line_height": {
      "custom": 1,
    },
    "disable_ai": true,
    "buffer_line_height": {
      "custom": 1,
    },
    "buffer_font_family": "Hack",
    "buffer_font_size": 11,
    "option_as_meta": false,
    "button": true,
    // "shell": {},
    "toolbar": {
      "breadcrumbs": false,
    },
    "working_directory": "current_project_directory",
  },
}
